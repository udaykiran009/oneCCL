#!/bin/bash

WORK_DIR="$(cd "$( dirname "${BASH_SOURCE[0]}" )" > /dev/null && pwd)"
export ICCL_ROOT="$(cd ${WORK_DIR}/../; pwd -P)"

if [ -z "${LD_LIBRARY_PATH}" ]
then
    LD_LIBRARY_PATH="${ICCL_ROOT}/lib"; export LD_LIBRARY_PATH
else
    LD_LIBRARY_PATH="${ICCL_ROOT}/lib:${LD_LIBRARY_PATH}"; export LD_LIBRARY_PATH
fi

ICCL_ATL_TRANSPORT_PATH="${ICCL_ROOT}/lib"; export ICCL_ATL_TRANSPORT_PATH
