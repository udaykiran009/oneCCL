#!/bin/bash

WORK_DIR="$(cd "$( dirname "${BASH_SOURCE[0]}" )" > /dev/null && pwd)"
export ICCL_ROOT="$(cd ${WORK_DIR}/../../; pwd -P)"

INTERMEDIATE_DIR="intel64"

if [ -z "${PATH}" ]
then
    PATH="${ICCL_ROOT}/${INTERMEDIATE_DIR}/bin"; export PATH
else
    PATH="${ICCL_ROOT}/${INTERMEDIATE_DIR}/bin:${PATH}"; export PATH
fi

if [ -z "${LD_LIBRARY_PATH}" ]
then
    LD_LIBRARY_PATH="${ICCL_ROOT}/${INTERMEDIATE_DIR}/@CMAKE_INSTALL_LIBDIR@"; export LD_LIBRARY_PATH
else
    LD_LIBRARY_PATH="${ICCL_ROOT}/${INTERMEDIATE_DIR}/@CMAKE_INSTALL_LIBDIR@:${LD_LIBRARY_PATH}"; export LD_LIBRARY_PATH
fi

ICCL_ATL_TRANSPORT_PATH="${ICCL_ROOT}/${INTERMEDIATE_DIR}/@CMAKE_INSTALL_LIBDIR@"; export ICCL_ATL_TRANSPORT_PATH
FI_PROVIDER_PATH="${ICCL_ROOT}/${INTERMEDIATE_DIR}/@CMAKE_INSTALL_LIBDIR@/prov"; export FI_PROVIDER_PATH
